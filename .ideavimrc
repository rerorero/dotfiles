set nowrapscan
set noignorecase
set smartcase
set hlsearch
set scrolloff=10

" ctaagsでタグジャンプ時に新しいタブで開く
nnoremap s] <C-w>g<C-]><C-w>T
nnoremap s} <C-w>]

" mac用カーソル移動
nnoremap <C-a> 0
nnoremap <C-e> $

nnoremap s <Nop>
nnoremap sj <C-w>j
nnoremap sk <C-w>k
nnoremap sl <C-w>l
nnoremap sh <C-w>h
nnoremap sJ <C-w>J
nnoremap sK <C-w>K
nnoremap sL <C-w>L
nnoremap sH <C-w>H
nnoremap sn gt
nnoremap sp gT
nnoremap sr <C-w>r
nnoremap s= <C-w>=
nnoremap sw <C-w>w
nnoremap so <C-w>_<C-w>|
nnoremap sO <C-w>=
nnoremap sN :<C-u>bn<CR>
nnoremap sP :<C-u>bp<CR>
nnoremap st :<C-u>tabnew<CR>
nnoremap sT :<C-u>Unite tab<CR>
nnoremap ss :<C-u>sp<CR>
nnoremap sv :<C-u>vs<CR>
nnoremap sq :<C-u>q<CR>
nnoremap sQ :<C-u>bd<CR>

" ヤンクの内容をぺーすとする
nnoremap <silent> yp "0p
nnoremap <silent> yP "0P

" US keyboard
" noremap ; :
" noremap : ;

" remap Y
nmap Y y$

" インクリメント・デクリメント
nnoremap + <C-a>
nnoremap - <C-x>

set clipboard=unnamed
